<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10ssp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/recent_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="@dimen/_15ssp"
                android:textColor="#EF8767"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_2ssp"
                />

            <TextView
                android:id="@+id/recent_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BDT 1000"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_2ssp"
                />

            <TextView
                android:id="@+id/recent_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_2ssp"
                />
            <TextView
                android:id="@+id/recent_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-5-1"
                android:textColor="@color/black"
                android:alpha="0.7"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_2ssp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageButton
                android:id="@+id/edit"
                android:layout_width="@dimen/_40ssp"
                android:layout_height="@dimen/_40ssp"
                android:src="@drawable/edit"
                android:background="@drawable/input_edittext"
                android:layout_marginEnd="@dimen/_5ssp"
                />
            <ImageButton
                android:id="@+id/delete"
                android:layout_width="@dimen/_40ssp"
                android:layout_height="@dimen/_40ssp"
                android:src="@drawable/delete"
                android:background="@drawable/input_edittext"
                android:layout_marginStart="@dimen/_5ssp"
                android:layout_marginEnd="@dimen/_10ssp"

                />



        </LinearLayout>



    </LinearLayout>




</androidx.cardview.widget.CardView>