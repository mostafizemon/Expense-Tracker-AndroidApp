<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity"
    android:orientation="vertical"
    android:padding="@dimen/_10ssp"
    >

    <TextView
        android:id="@+id/addtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Info"
        android:textColor="#EF8767"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_30ssp"
        android:textSize="@dimen/_14ssp"
        />


    <Spinner
        android:id="@+id/editspinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30ssp"
        android:background="@drawable/input_edittext"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginEnd="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10ssp"
        android:padding="@dimen/_5ssp"
        />

    <EditText
        android:id="@+id/editdescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70ssp"
        android:background="@drawable/input_edittext"
        android:layout_marginTop="@dimen/_10ssp"
        android:hint="Description (Optional)"
        android:padding="@dimen/_5ssp"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginEnd="@dimen/_15ssp"
        android:textSize="@dimen/_12ssp"
        />
    <EditText
        android:id="@+id/edittotal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30ssp"
        android:background="@drawable/input_edittext"
        android:layout_marginTop="@dimen/_10ssp"
        android:hint="Total"
        android:padding="@dimen/_5ssp"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginEnd="@dimen/_15ssp"
        android:textSize="@dimen/_12ssp"
        android:layout_marginBottom="@dimen/_10ssp"
        android:inputType="number"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_20ssp"
        android:layout_marginEnd="@dimen/_20ssp"
        >
        <Button
            android:id="@+id/editcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_5ssp"
            />
        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_5ssp"
            />



    </LinearLayout>



</LinearLayout>